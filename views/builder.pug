html(lang="en")
    head
        title Alloy Instance Builder

        link(rel="stylesheet" href="/builder.css")
        script(src='https://d3js.org/d3.v5.min.js')
        script(src="/js/alloy.js")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/js-yaml/3.11.0/js-yaml.js' integrity='sha256-tXpwsPxJo9kMzr6AxcfMzlbqY6YahrPZO9GVquGU0YA=' crossorigin='anonymous')

        link(rel='stylesheet' href='/lib/codemirror/codemirror.css')
        link(rel='stylesheet' href='/lib/codemirror/theme/oceanic-next.css')
        script(src='/lib/codemirror/codemirror.js')
        script(src='/lib/codemirror/keymap/sublime.js')
        script(src='/lib/codemirror/addon/selection/active-line.js')
        script(src='/lib/codemirror/addon/comment/comment.js')
        script(src='/lib/codemirror/mode/yaml/yaml.js')

    body

        div.column#left
            div.message#welcome Welcome to the Alloy Instance Builder. To get started, open an Alloy XML file.
            div.button-big#open Open XML
                input#xml-file(style="display: none" type="file")
        div.column
            svg.alloy-instance

        script(src="/builder.js")